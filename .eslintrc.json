{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "globals":{
      "define": true,
      "Group" : true,
      "CanvasLite": true,
      "BasicElement" : true,
      "Element" : true,
      "Painter" : true,
      "Line" : true,
      "Rect" : true,
      "libDefaults": true,
      "userDefaults": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        "always"
      ],
      "no-proto": ["warn"],
      "no-unused-vars": ["warn"]
    }
}
